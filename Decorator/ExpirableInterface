<?php

namespace KmeCnin\Toolbox\Decorator;

interface ExpirableInterface
{
    /**
     * Set expiresAt.
     *
     * @param \DateTime
     *
     * @return ExpirableInterface
     */
    public function setExpiresAt(\DateTime $date);

    /**
     * Get expiresDate or null if undefined.
     *
     * @return \DateTime|null
     */
    public function getExpiresAt();

    /**
     * Test if it is expired.
     *
     * @return bool
     */
    public function isExpired();

    /**
     * Test if it will expires at the given date.
     *
     * @return bool
     */
    public function itWillExpires(\DateTime $date);

    /**
     * Test if it should expires.
     *
     * @return bool
     */
    public function hasExpirationDate();
}
